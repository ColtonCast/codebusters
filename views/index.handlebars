<div class="container index">
    <div class="col m12">
        <div class="card grey darken-2">
            <div class="card-content white-text">
                <div class="typewriter">
                    <h1>Codebusters</h1>
                </div>
                <h4>
                    Test your skills by completing the next coding coding challenges. You will earn points for all
                    correct answers. Move up the rankings as you compete with other web developers. Good luck!
                </h4>
                <a class="waves-effect btn modal-trigger black-text" href="#loginModal">Start Coding Challenge</a>
            </div>
        </div>
    </div>
</div>

{{!-- Leaderboard Container--}}
<table class="container highlight responsive-table">
    <thead>
        <tr>
            <th scope="col" colspan="3" class="center-align">Leaderboard</th>
        </tr>
        <tr>
            <th>Ranking #</th>
            <th>Player Name</th>
            <th>Score</th>
        </tr>
    </thead>
    <tbody>
        {{#each game}}
        <tr>
            <td></td>
            <td>{{user.fullname}}</td>
            <td>{{total_score}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>